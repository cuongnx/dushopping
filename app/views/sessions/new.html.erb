<% provide(:title, 'Sign in') %>
<h1>
Sign in
</h1>

<div class="sign-form">
	<%= form_for(:session, url: sessions_path) do |f| %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>
	<br/>
	<%= f.check_box :remember %>
	<%= f.label :remember, "Remember me", style: "display: inline" %>
	<br/>
	<br/>
	<%= f.submit "Sign in", class: "button" %>
</div>
<% end %>

<p>
	New user? <%= link_to "Sign up now!", signup_path %>
</p>
</div>